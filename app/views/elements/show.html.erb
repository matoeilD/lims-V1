<%- model_class = @element.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:elementname) %>:</strong></dt>
  <dd><%= @element.elementname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:elementtype) %>:</strong></dt>
  <dd><%= @element.elementtype %></dd>
  <dt><strong><%= model_class.human_attribute_name(:elementnote) %>:</strong></dt>
  <dd><%= @element.elementnote %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @element.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:element_id) %>:</strong></dt>
  <dd><%= @element.element_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:project_id) %>:</strong></dt>
  <dd><%= @element.project_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              elements_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_element_path(@element), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              element_path(@element),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
