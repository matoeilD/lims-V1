<%= semantic_form_for @em_pcr, :html => { :class => 'form-horizontal' } do |f| %>
  
  
  <div class="control-group">
    <%= f.label :EM_PCR_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :EM_PCR_name, :class => 'text_field'  %>
    </div>
  </div>
  
  <div class="control-group">
  
    <div class="controls">
       <!--method ds helper -->
    <%= f.input :library_assoc, :as => :radio, :collection => filtre_elt_associe(@project_associe_id,"library") %>
    </div>
  </div>
  <div class="control-group">
    
    <div class="controls">
       
      <%= f.input :PCR_round, :as => :radio, :collection => ["1st round","2nd round"] %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                elements_path, :class => 'btn' %>
  </div>
<% end %>
