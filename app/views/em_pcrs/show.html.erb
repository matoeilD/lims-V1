<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
 <dt><strong><%= model_class.human_attribute_name(:EM_PCR_name) %>:</strong></dt>
  <dd><%= @em_pcr.EM_PCR_name %></dd>
  
