<%- model_class = EmPcr.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:EM_PCR_name) %></th>
      <th><%= model_class.human_attribute_name(:PCR_round) %></th>
      <th><%= model_class.human_attribute_name(:element_id) %></th>
      <th><%= model_class.human_attribute_name(:library_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @em_pcrs.each do |em_pcr| %>
      <tr>
        <td><%= link_to em_pcr.id, em_pcr_path(em_pcr) %></td>
        <td><%= em_pcr.EM_PCR_name %></td>
        <td><%= em_pcr.PCR_round %></td>
        <td><%= em_pcr.element_id %></td>
        <td><%= em_pcr.library_id %></td>
        <td><%=l em_pcr.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_em_pcr_path(em_pcr), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      em_pcr_path(em_pcr),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_em_pcr_path,
            :class => 'btn btn-primary' %>
