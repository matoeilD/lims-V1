<%= semantic_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
   
    <div class="controls">
      <%= f.input :name, :class => 'text_field', :required => true%>
    </div>
  </div>
  <div class="control-group">
  
    <div class="controls">
      <%= f.input :first_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
   
    <div class="controls">
      <%= f.input :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
  
    <div class="controls">
      <%= f.input :password, :class => 'text_field' %>
      
      
    </div>
  </div>
  <div class="control-group">
   
    <div class="controls">
      <%= f.input :position, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>
