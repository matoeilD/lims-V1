  <%= csrf_meta_tags %>
</head>
<body>
    <div class="container">
      
 


      
      
    <div class="row">
      <div class="span9">
        <!-- to make flashes dry  -->
        <%= render :partial => 'common_partials/flashes' %>
        <%= yield %></div>
