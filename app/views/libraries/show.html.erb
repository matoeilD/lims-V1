<%- model_class = @library.class -%>





<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
   
  <dt><strong><%= model_class.human_attribute_name(:library_name) %>:</strong></dt>
  <dd><%= display_fields_on_views(@library.library_name) %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= display_fields_on_views(Element.find(@library.element_id).element_date) %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:projet_associé) %>:</strong></dt>
  <dd><%= display_fields_on_views(Element.find(@library.element_id).projects.collect { |a| a.project_name  }.join(",")) %></dd>
  
   <dt><strong><%= model_class.human_attribute_name(:experimentator) %>:</strong></dt>
  <dd><%= display_fields_on_views(Element.find(@library.element_id).users.collect { |a| a.name  }.join(",")) %></dd>

  <dt><strong><%= model_class.human_attribute_name(:fragmentation) %>:</strong></dt>
  <dd><%= display_fields_on_views(@library.fragmentation) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:strategy) %>:</strong></dt>
  <dd><%= display_fields_on_views(@library.strategy )%></dd>
 
  <dt><strong><%= model_class.human_attribute_name(:extraction_associé) %>:</strong></dt>
  <dd><%= display_fields_on_views(@library.extraction_assoc) %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back_to_index', :default => t("helpers.links.back_to_index")),
              elements_path, :class => 'btn'  %>
  <%= link_to t('.edit_further', :default => t("helpers.links.edit_further")),
              edit_library_path(@library), :class => 'btn' %>

</div>
