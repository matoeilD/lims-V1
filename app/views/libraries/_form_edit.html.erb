<%= semantic_form_for @library, :html => { :class => 'form-horizontal' } do |f| %>
 
  <div class="control-group">
    <%= f.label :library_name, :class => 'control-label' %>
    <div class="controls">
      <%= @library.library_name %>
    </div>
  </div>
  
  <div class="control-group">
   
    <div class="controls">
       <!--method ds helper -->
    <%= f.input :extraction_assoc, :as => :radio, :collection => Extraction.all.collect {|el| el.extraction_name}
 %>
       </div>
  </div>
  <div class="control-group">
    
    <div class="controls">
      <%= f.input :fragmentation %>
    </div>
  </div>
  <div class="control-group">
    
    <div class="controls">
      <%= f.input :strategy %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                elements_path, :class => 'btn' %>
  </div>
<% end %>
