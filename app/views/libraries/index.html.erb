<%- model_class = Library.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:library_name) %></th>
      <th><%= model_class.human_attribute_name(:fragmentation) %></th>
      <th><%= model_class.human_attribute_name(:strategy) %></th>
      <th><%= model_class.human_attribute_name(:element_id) %></th>
      <th><%= model_class.human_attribute_name(:extraction_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @libraries.each do |library| %>
      <tr>
        <td><%= link_to library.id, library_path(library) %></td>
        <td><%= library.library_name %></td>
        <td><%= library.fragmentation %></td>
        <td><%= library.strategy %></td>
        <td><%= library.element_id %></td>
        <td><%= library.extraction_id %></td>
        <td><%=l library.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_library_path(library), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      library_path(library),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_library_path,
            :class => 'btn btn-primary' %>
