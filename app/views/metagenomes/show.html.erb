<%- model_class = @metagenome.class -%>

<div class="alert alert-success"  id="notice">
    <button class="close" data-dismiss="alert">×</button>
    <strong>Well done!</strong> <%= notice %>
    </div>


<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
<dt><strong><%= model_class.human_attribute_name(:meta_name) %>:</strong></dt>
  <dd><%= display_fields_on_views(@metagenome.meta_name) %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%=display_fields_on_views( Element.find(@metagenome.element_id).element_date)%></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:projet_associé) %>:</strong></dt>
  <dd><%= display_fields_on_views(Element.find(@metagenome.element_id).projects.collect { |a| a.projectname  }.join(",") )%></dd>
  
   <dt><strong><%= model_class.human_attribute_name(:experimentator) %>:</strong></dt>
  <dd><%= display_fields_on_views(Element.find(@metagenome.element_id).users.collect { |a| a.name  }.join(",")) %></dd>
  
  
  <dt><strong><%= model_class.human_attribute_name(:data_associé) %>:</strong></dt>
  <dd><%= display_fields_on_views(@metagenome.data_assoc)%></dd>
  <dt><strong><%= model_class.human_attribute_name(:meta_tools) %>:</strong></dt>
  <dd><%= display_fields_on_views(@metagenome.meta_tools) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:meta_params) %>:</strong></dt>
  <dd><%= display_fields_on_views(@metagenome.meta_params )%></dd>
  <dt><strong><%= model_class.human_attribute_name(:meta_output) %>:</strong></dt>
  <dd><%= display_fields_on_views(@metagenome.meta_output) %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              metagenomes_path, :class => 'btn'  %>
  <%= link_to t('.edit_further', :default => t("helpers.links.edit_further")),
              edit_metagenome_path(@metagenome), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              metagenome_path(@metagenome),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
