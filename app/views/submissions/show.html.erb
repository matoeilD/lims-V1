<%- model_class = @submission.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:submission_name) %>:</strong></dt>
  <dd><%= @submission.submission_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:seize_s) %>:</strong></dt>
  <dd><%= @submission.seize_s %></dd>
  <dt><strong><%= model_class.human_attribute_name(:genbank_number) %>:</strong></dt>
  <dd><%= @submission.genbank_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:element_id) %>:</strong></dt>
  <dd><%= @submission.element_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sequencing_id) %>:</strong></dt>
  <dd><%= @submission.sequencing_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              submissions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_submission_path(@submission), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              submission_path(@submission),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
