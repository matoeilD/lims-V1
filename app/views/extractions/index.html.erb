<%- model_class = Extraction.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:extraction_name) %></th>
      <th><%= model_class.human_attribute_name(:element_id) %></th>
      <th><%= model_class.human_attribute_name(:culture_id) %></th>
      <th><%= model_class.human_attribute_name(:extraction_note) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @extractions.each do |extraction| %>
      <tr>
        <td><%= link_to extraction.id, extraction_path(extraction) %></td>
        <td><%= extraction.extraction_name %></td>
        <td><%= extraction.element_id %></td>
        <td><%= extraction.culture_id %></td>
        <td><%= extraction.extraction_note %></td>
        <td><%=l extraction.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_extraction_path(extraction), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      extraction_path(extraction),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_extraction_path,
            :class => 'btn btn-primary' %>
