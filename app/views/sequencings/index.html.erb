<%- model_class = Sequencing.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:sequencing_name) %></th>
      <th><%= model_class.human_attribute_name(:paired_end) %></th>
      <th><%= model_class.human_attribute_name(:distance_cassure) %></th>
      <th><%= model_class.human_attribute_name(:element_id) %></th>
      <th><%= model_class.human_attribute_name(:empcr_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @sequencings.each do |sequencing| %>
      <tr>
        <td><%= link_to sequencing.id, sequencing_path(sequencing) %></td>
        <td><%= sequencing.sequencing_name %></td>
        <td><%= sequencing.paired_end %></td>
        <td><%= sequencing.distance_cassure %></td>
        <td><%= sequencing.element_id %></td>
        <td><%= sequencing.empcr_id %></td>
        <td><%=l sequencing.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_sequencing_path(sequencing), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      sequencing_path(sequencing),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_sequencing_path,
            :class => 'btn btn-primary' %>
