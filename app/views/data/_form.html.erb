<%= form_for @datum, :html => { :class => 'form-horizontal' } do |f| %>
 
  <div class="control-group">
    <%= f.label :data_file, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :data_file, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sequencing_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :sequencing_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                data_path, :class => 'btn' %>
  </div>
<% end %>
