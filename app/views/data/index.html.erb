<%- model_class = Datum.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:data_name) %></th>
      <th><%= model_class.human_attribute_name(:data_file) %></th>
      <th><%= model_class.human_attribute_name(:sequencing_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @data.each do |datum| %>
      <tr>
        <td><%= link_to datum.id, datum_path(datum) %></td>
        <td><%= datum.data_name %></td>
        <td><%= datum.data_file %></td>
        <td><%= datum.sequencing_id %></td>
        <td><%=l datum.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_datum_path(datum), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      datum_path(datum),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_datum_path,
            :class => 'btn btn-primary' %>
