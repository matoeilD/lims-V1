<%= semantic_form_for @datum, :html => { :class => 'form-horizontal' } do |f| %>
 
  
  <div class="control-group">
    <%= f.label :data_name, :class => 'control-label' %>
    <div class="controls">
      <%= @datum.data_name  %>
    </div>
  </div>
  
  <div class="control-group">
   
    <div class="controls">
       <!--method ds helper -->
    <%= f.input :sequencing_assoc, :as => :radio, :collection => Sequencing.all.collect {|el| el.sequencing_name}
 %>
       </div>
  </div>
  
  
  <div class="control-group">
    <div class="controls">
      <%= f.input :data_file, :class => 'text_area' %>
    </div>
  </div>
 

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                elements_path, :class => 'btn' %>
  </div>
<% end %>
